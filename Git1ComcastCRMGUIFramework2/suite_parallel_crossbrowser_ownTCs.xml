<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="methods" thread-count="3">

<listeners>
   <listener class-name="com.comcast.crm.listenerutility.ListenerImplementationClass"/>
</listeners>

  <test name="Test_in_edge">
  <parameter name="BROWSER" value="edge"/>
    <classes>
      <class name="com.comcast.crm.documenttest.CreateDocumentWithPOMWithAnnotation_Assertion"/>
      <class name="com.comcast.crm.leadtest.CreateLeadWithPOMWithAnnotation_Assertion"/>
    </classes>
   </test>
   
   <test name="Test_in_chrome">
   <parameter name="BROWSER" value="chrome"/>
    <classes>
      <class name="com.comcast.crm.troubletickettest.CreateTroubleTicketWithPOMWithAnnotation_Assertion"/>
      <class name="com.comcast.crm.vendortest.CreateVendorWithPOMWithAnnotation_Assertion"/>
       </classes>
   </test>
      
  <test name="Test_in_firefox">
   <parameter name="BROWSER" value="firefox"/>
    <classes>
      <class name="com.comcast.crm.opportunitytest.CreateOpportunityWithPOMWithAnnotation_Assertion"/>
      <class name="com.comcast.crm.producttest.CreateProductWithPOMWithAnnotation_Assertion"/>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
